<% include src/static/templates/client_header %>

<div class="container cart-item">
  <div class="row">
    <div class="col-12">
      <div class="row text-center progress-info justify-content-center">
        <div class="col-12 col-md-4"><a href="#" class="text-success">Order summary</a></div>
        <div class="col-12 col-md-4"><a href="#" class="text-success"><b>Delivery&Payment results</b></a></div>
        <div class="col-12 col-md-4"><a href="#" class="text-success">Confirm checkout</a></div>
        <div class="col-12">
          <div class="progress">
            <div class="progress-bar bg-success" role="progressbar" style="width: 66%" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <form class="row delivery-list">
    <div class="col-12 col-md-6 userinfo">
      <h3>User information</h3>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Full name</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" placeholder="Full name">
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Email</label>
        <div class="col-sm-8">
          <input type="email" class="form-control" placeholder="Email">
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Phone number</label>
        <div class="col-sm-8">
          <input type="tel" class="form-control" placeholder="Phone number">
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Address</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" placeholder="Address">
        </div>
      </div>
    </div>
    <div class="col-12 col-md-6 payment">
      <h3>Payment method</h3>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Choose one</label>
        <div class="col-sm-8">
          <div class="form-check">
            <input class="form-check-input" type="radio" name="payment" value="option1">
            <label class="form-check-label">
              Pay by card
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="payment" value="option2" checked>
            <label class="form-check-label">
              Pay with SEPA Direct Debit
            </label>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Your IBAN</label>
        <div class="col-sm-8">
          <input type="TEXT" class="form-control" placeholder="IBAN">
        </div>
      </div>
    </div>
    <div class="col-12 d-flex justify-content-end">
      <button type="button" class="btn btn-success">Continue</button>
    </div>
  </form>
</div>

<% include src/static/templates/client_footer %>