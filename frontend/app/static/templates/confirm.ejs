<% include src/static/templates/client_header %>

<div class="container cart-item">
  <div class="row">
    <div class="col-12">
      <div class="row text-center progress-info justify-content-center">
        <div class="col-12 col-md-4"><a href="#" class="text-success">Order summary</a></div>
        <div class="col-12 col-md-4"><a href="#" class="text-success">Delivery&Payment results</a></div>
        <div class="col-12 col-md-4"><a href="#" class="text-success"><b>Confirm checkout</b></a></div>
        <div class="col-12">
          <div class="progress">
            <div class="progress-bar bg-success" role="progressbar" style="width: 66%" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row cart-list">
      <div class="col-12">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <th scope="row">
                <img src="//placehold.it/60" alt="Image #1">
              </th>
              <td>Summer Beans</td>
              <td>$12&nbsp;x</td>
              <td>
                <div class="input-group">
                  <input type="text" readonly class="form-control" placeholder="Count" value="5">
                </div>
              </td>
              <td>$60</td>
              <td>&times;</td>
            </tr>
            <tr>
              <th scope="row">
                <img src="//placehold.it/60" alt="Image #1">
              </th>
              <td>Lightweight cocoa strips</td>
              <td>$12&nbsp;x</td>
              <td>
                <div class="input-group">
                  <input type="text" readonly class="form-control" placeholder="Count" value="1">
                </div>
              </td>
              <td>$60</td>
              <td>&times;</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

  <form class="row delivery-list">
    <div class="col-12 col-md-6 userinfo">
      <h3>User information</h3>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Full name</label>
        <div class="col-sm-8">
          <input type="text" readonly class="form-control" placeholder="Full name">
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Email</label>
        <div class="col-sm-8">
          <input type="email" readonly class="form-control" placeholder="Email">
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Phone number</label>
        <div class="col-sm-8">
          <input type="tel" readonly class="form-control" placeholder="Phone number">
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Address</label>
        <div class="col-sm-8">
          <input type="text" readonly class="form-control" placeholder="Address">
        </div>
      </div>
    </div>
    <div class="col-12 col-md-6 payment">
      <h3>Payment method</h3>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Choose one</label>
        <div class="col-sm-8">
          <div class="form-check">
            <input class="form-check-input" type="radio" name="payment" value="option2" checked>
            <label class="form-check-label">
              Pay with SEPA Direct Debit
            </label>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Your IBAN</label>
        <div class="col-sm-8">
          <input type="TEXT" readonly class="form-control" readonly placeholder="IBAN">
        </div>
      </div>
    </div>
    <div class="col-12 d-flex justify-content-end">
      <button type="button" class="btn btn-success">Place an order</button>
    </div>
  </form>
</div>

<% include src/static/templates/client_footer %>